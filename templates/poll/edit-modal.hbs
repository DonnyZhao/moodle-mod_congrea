<div id="editPollModal" class="modal in" tab-index="-1" area-hidden="true" style="display: block; padding-right: 0px;">
  <div class="modal-dialog">
    <div class="modal-content" id="pollModalBody">
      <div id="contHead" class="modal-header">
        <button type="button" class="close" id="modalClose" data-dismiss="modal">Ã—</button>
        <div id="editTx" class="row modalHeaderTx">Poll Edit</div>
      </div>
      <div id="contBody" class="modal-body">
        <div id="qnTxCont" class="row previewTxCont" style="display: block;"><label class="pollLabel">Question :</label>
          <div class="inputWrapper clearfix">
            <textarea id="q" class="qn form-control" value="{{data.questiontext}}" rows="1"></textarea>
          </div>
        </div>
        <div id="optsTxCont" class="row previewTxCont" style="display: block;">
          <label id="pollOptLabel" class="pollLabel">Options :</label>
          {{#each data.options}}
            <div class="inputWrapper clearfix">
              <textarea rows="1" id="option{{@key}}" class="opt form-control" value="{{this}}"
                        style="width: 97%; float: left;"></textarea>
            </div>
          {{/each}}
          <div id="addMoreCont" class="addMoreCont">
            <span class="icon-plus"></span>
            <a href="#" id="addMoreOption" class="addMoreOption controls">Add Option</a>
          </div>
        </div>
      </div>
      <div id="contFooter" class="modal-footer">
        <div id="footerCtrCont">
          <button id="reset" class="btn btn-default pull-left controls" type="button">Reset<i class="icon-reset"></i>
          </button>
          <button id="etSave" class="btn btn-default controls">Save<i class="icon-save"></i></button>
          <button id="saveNdPublish" class="btn btn-default controls">Save and Publish<i class="icon-publish"></i>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="popover-content">
    <div id="popupCont" class="pollPreview">
      <div><div id="qnTxCont" class="row previewTxCont">
        <label>{{getString 'Question'}} :</label>
        <div class="viewQn">{{data.questiontext}}</div>
      </div>
        <div id="optsTxCont" class="row previewTxCont">
          <label>{{getString 'Options'}} :</label>
          {{#each data.options}}
          <div class="viewOpt">
            <input class="opt" name="option" value={{@key}} type="radio" id={{@key}}>
            <label>{{this}}</label>
          </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>

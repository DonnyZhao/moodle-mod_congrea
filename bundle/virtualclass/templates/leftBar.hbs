
<div id="virtualclassAppLeftPanel" class="leftbar" data-surname="{{meetingMode}}">
  {{#if isPlay}}
    {{> recordingControl}}
  {{/if}}
  {{#if hasControls}}
    {{#if meetingMode}}
      {{> appToolsMeeting }}
    {{else}}
      {{> appTools }}
    {{/if}}

  {{/if}}
  <div id="virtualclassWhiteboard" class="virtualclass whiteboard">
    <div class="whiteboardContainer"> </div>

  {{#if hasControls}}
    <span class="nvgt prev"></span>
    <span class="nvgt next"></span>
  {{/if}}
    
  </div>
</div>
